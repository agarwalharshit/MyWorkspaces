		Session s=new AnnotationConfiguration()  
		         .configure("com/hibernate/hibernate.cfg.xml").buildSessionFactory().openSession(); 
		
	Transaction t = s.beginTransaction();
//	Employee1 e = new Employee1();
//	e.setId(14);
