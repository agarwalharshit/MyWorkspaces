//	s.persist(e);
	Player p1 = new Player();
	p1.setId(1);
	p1.setName("Harshit");
	p1.setTeamId(1);
	p1.setAge(27);
	
	Player p2 = new Player();
	p2.setId(2);
	p2.setName("Anshul");
	p2.setTeamId(1);
	p2.setAge(26);
	
	Team t1 = new Team();
	t1.setTeamId(1);
	t1.setTeamName("Spartens");
	
	Set<Player> hs= new HashSet<Player>();
	hs.add(p1);
	hs.add(p2);
	t1.setP(hs);;
	
	
	t.commit();
	s.close();

